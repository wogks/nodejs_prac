extends base.pug

block content
    if errorMessage 
        span=errorMessage 
    form(method="POST")
        input(placeholder="Title", required, type="text", name="title")
        input(placeholder="Description", required, type="text", name="description", minlength=3)
        input(placeholder="Hashtags", required, type="text", name="hashtags")
        input(type="submit", value="Upload video")